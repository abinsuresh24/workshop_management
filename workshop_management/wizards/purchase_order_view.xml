<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    work purchase wizard view form-->
    <record id="purchase_order_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.order.wizard.view.form</field>
        <field name="model">work.purchase</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="confirm_order" string="CONFIRM"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel order"
                                special="cancel" class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>